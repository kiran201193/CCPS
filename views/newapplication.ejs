<% include partials/header  %>
<div class="container">
    <form class="form-horizontal" action="/creditcard/new" method="POST">

      <div class="form-group">
        <label for="customername" class="col-sm-2 control-label">Name<span class="req">*</span></label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="customername" id="customername" placeholder="Full Name" required>
        </div>
      </div>
      
      <div class="form-group">
        <label for="dob" class="col-sm-2 control-label">Birthdate<span class="req">*</span></label>
        <div class="col-sm-10">
          <input type="date" class="form-control" id="dob" name="dob" placeholder="Insert Date of Birth" required>
        </div>
      </div>
      
      <div class="form-group">
        <label for="address" class="col-sm-2 control-label">Address<span class="req">*</span></label>
        <div class="col-sm-10">
          <textarea class="form-control" id="address" name="address" placeholder="Enter Address matching your Address Proof" required></textarea>
        </div>
      </div>
      
      <div class="form-group">
          <label for="contactno" class="col-sm-2 control-label">Contact Number<span class="req">*</span></label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="contactno" name="contactno" placeholder="Your Mobile/Landline Number" maxlength="10" pattern="\d{10}" title="Please Enter a valid 10digit contact number" required>
          </div>
      </div>

      <div class="form-group">
          <label for="pan" class="col-sm-2 control-label">PAN<span class="req">*</span></label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="pan" name="pan" placeholder="Your PAN" maxlength="10" pattern="([A-Z]{5})(\d{4})([A-Z]{1})" title="Please Enter a valid 10digit contact number" required>
          </div>
      </div>

      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email<span class="req">*</span></label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="email" name="email" placeholder="johnsmith@example.com" required>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Register</button>
        </div>
      </div>
    </form>

</div>

<% include partials/footer  %>